{
  "semi": true,
  "tabWidth": 2,
  "useTabs": true,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "singleAttributePerLine": false,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/*",
    "^../(.*)",
    "^./(.*)",
    "(.css)$",
    "(.scss)$"
  ],
  "importOrderSeparation": true,
  "importOrderSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}